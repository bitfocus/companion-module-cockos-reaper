{
	"name": "cockos-reaper",
	"version": "2.2.0",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg --ignore-pattern old",
		"lint": "yarn lint:raw ."
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"dependencies": {
		"@companion-module/base": "~1.7.0",
		"reaper-osc": "0.4.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.5.0",
		"@types/node": "^18.11.9",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"rimraf": "^3.0.2",
		"typescript": "~4.9"
	},
	"engines": {
		"node": "^18.12"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-cockos-reaper.git"
	}
}
